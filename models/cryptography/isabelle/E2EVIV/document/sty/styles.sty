%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Styles for mathematical symbols, indices etc. This changes the
% typeface used for certain classes of mathematical symbols.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Standard mathematical sets or similar structures, e.g., natural
% numbers, groups, rings, matroids, etc.
\newcommand{\mathbbstyle}[1]{\mathbb{#1}}

% Labels used as subscripts and superscripts of algorithms,
% adversaries, error probabilities, etc.
\newcommand{\labelstyle}[1]{\textit{#1}}

% Distributions as names.
\newcommand{\diststyle}[1]{\mathsf{#1}}

% Algorithm names.
\newcommand{\algostyle}[1]{\mathsf{#1}}

% Descriptive labels used as super/sub-scripts for algorithms.
\newcommand{\algolabelstyle}[1]{\textrm{\tiny #1}}

% Generic Turing machines.
\newcommand{\machinestyle}[1]{\mathcal{#1}}

% Complexity classes.
\newcommand{\complexityclassstyle}[1]{\mathsf{#1}}

% Labels for special purpose security parameters.
\newcommand{\securityparamstyle}[1]{#1}

% Systems, e.g., signature schemes, cryptosystems, computational
% problems, etc.
\newcommand{\systemstyle}[1]{\mathcal{#1}}

% Spaces, e.g., key spaces, ciphertext spaces, randomness spaces, etc.
\newcommand{\spacestyle}[1]{\mathsf{#1}}

% Protocol names as pseudo-code in written text.
\newcommand{\protstyle}[1]{\textsf{#1}}

% ITM in the UC model.
\newcommand{\ucentitystyle}[1]{\mathcal{#1}}

% Descriptive labels used as subscripts for, e.g., ideal
% functionalities in the UC model.
\newcommand{\uclabelstyle}[1]{\textit{#1}}

% Gate in a generalized mix-net description.
\newcommand{\ucgate}[1]{\mathsf{#1}}

