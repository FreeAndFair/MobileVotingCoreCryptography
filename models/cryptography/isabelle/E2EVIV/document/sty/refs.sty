%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Macros for indexing, referencing theorems, algorithms, etc consistently.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\ix}[1]{#1\index{#1}}
\newcommand{\ixx}[2]{#1\index{#1@#2}}

\newcommand{\lemm}[1]{\mbox{Lemma~\ref{lemm:#1}}}
\newcommand{\coro}[1]{\mbox{Corollary~\ref{coro:#1}}}
\newcommand{\theo}[1]{\mbox{Theorem~\ref{theo:#1}}}
\newcommand{\clai}[1]{\mbox{Claim~\ref{clai:#1}}}
\newcommand{\defi}[1]{\mbox{Definition~\ref{defi:#1}}}
\newcommand{\expe}[1]{\mbox{Experiment~\ref{expe:#1}}}
\newcommand{\prot}[1]{\mbox{Protocol~\ref{prot:#1}}}
\newcommand{\func}[1]{\mbox{Functionality~\ref{func:#1}}}
\newcommand{\subfunc}[1]{\mbox{Subfunctionality~\ref{subfunc:#1}}}
\newcommand{\exam}[1]{\mbox{Example~\ref{exam:#1}}}
\newcommand{\rema}[1]{\mbox{Remark~\ref{rema:#1}}}
\newcommand{\chap}[1]{\mbox{Chapter~\ref{chap:#1}}}
\newcommand{\appe}[1]{\mbox{Appendix~\ref{chap:#1}}}
\newcommand{\sect}[1]{\mbox{Section~\ref{sect:#1}}}
\newcommand{\figu}[1]{\mbox{Figure~\ref{figu:#1}}}
\newcommand{\figus}[2]{\mbox{Figure~\ref{figu:#1}-\ref{figu:#2}}}
\newcommand{\tabl}[1]{\mbox{Table~\ref{tabl:#1}}}
\newcommand{\step}[1]{\mbox{Step~\ref{enum:#1}}}
\newcommand{\steps}[2]{\mbox{Step~\ref{enum:#1}-\ref{enum:#2}}}
\newcommand{\equa}[1]{\mbox{Equation~(\ref{equa:#1})}}
\newcommand{\ineq}[1]{\mbox{Inequality~(\ref{equa:#1})}}
\newcommand{\lsti}[1]{\mbox{Listing~\ref{lsti:#1}}}

