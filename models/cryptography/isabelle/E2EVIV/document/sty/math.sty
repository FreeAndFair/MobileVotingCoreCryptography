%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Generic mathematical notation
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% True and false boolean values.
\newcommand{\true}{\top}
\newcommand{\false}{\bot}

% Generic predicates.
\newcommand{\predrho}{\rho}
\newcommand{\predrhot}[1]{\rho[#1]}
\newcommand{\predrhoi}[1]{\predrho_{#1}}

\newcommand{\grasam}{\xi}
\newcommand{\grasami}[1]{\grasam_{#1}}

% Generic predicates.
\newcommand{\predsigma}{\sigma}
\newcommand{\predsigmat}[1]{\sigma[#1]}
\newcommand{\predsigmai}[1]{\predsigma_{#1}}

% Predicates for extraction of grafted protocols.
\newcommand{\predv}{\rho}

\newcommand{\predz}{\rho}
\newcommand{\predzi}[1]{\predz_{#1}}

\newcommand{\predw}{\predz^*}
\newcommand{\predwi}[1]{\predw_{#1}}


% Set defined by condition with bar.
\newcommand{\cset}[2]{\twincommand{\{}{#1\,}{|}{\,#2}{\}}}

% Natural numbers and integers.
\newcommand{\nat}{\mathbbstyle{N}}
\newcommand{\natplus}{\nat^{+}}
\newcommand{\zed}{\mathbbstyle{Z}}
\newcommand{\real}{\mathbbstyle{R}}

% Intervals: binary, integer, integers from one, open real interval,
% open-closed real interval
\newcommand{\BINT}[1]{[0,2^{#1}-1]}
\newcommand{\INT}[2]{[#1,#2]}
\newcommand{\SINT}[1]{[#1]}
\newcommand{\OINT}[2]{(#1,#2)}
\newcommand{\OCINT}[2]{(#1,#2]}

% Sets of binary strings.
\newcommand{\BIN}{\{0,1\}}
\newcommand{\bin}[1]{\BIN^{#1}}
\newcommand{\BINstar}{\{0,1\}^{*}}

% Concatenation of strings.
\newcommand{\conc}{|}

% All zero/one strings and overlined.
\newcommand{\allzeros}[1]{0^{#1}}
\newcommand{\allones}[1]{1^{#1}}
\newcommand{\oone}{\overline{1}}

% Absolute value.
\newcommand{\pAbs}[1]{\left|#1\right|}

% Logarithms.
\newcommand{\logp}[1]{\log(#1)}
\newcommand{\logpq}{\logp{\q}}
\newcommand{\logbp}[2]{\log_{#1}(#2)}

% Permutations without and with indexing.
\newcommand{\perm}{\pi}
\newcommand{\permi}[1]{\perm_{#1}}
\newcommand{\permj}[1]{\permi{#1}}
\newcommand{\permji}[2]{\perm_{#1,#2}}

% Inverse permutations without and with indexing.
\newcommand{\iperm}{\perm^{-1}}
\newcommand{\ipermi}[1]{\iperm_{#1}}

% Set of permutations without and with indexing.
\newcommand{\permset}{\Sigma}
\newcommand{\permseti}[1]{\permset_{#1}}

% Matrix product
\newcommand{\matprod}[2]{#1\cdot#2}

% Cartesian product
\newcommand{\Carprod}{\bigtimes}
\newcommand{\carprod}{\times}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Matroids.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Ground sets.
\newcommand{\setS}{S}
\newcommand{\setSi}[1]{\setS_{#1}}
\newcommand{\setPowS}{2^{\setS}}

\newcommand{\setSstar}{\setS^*}
\newcommand{\setSstari}[1]{\setSstar_{#1}}

% Independence sets.
\newcommand{\setI}{I}
\newcommand{\setIi}[1]{\setI_{#1}}

\newcommand{\setIstar}{\setI^*}
\newcommand{\setIstari}[1]{\setIstar_{#1}}

% Matroids.
\newcommand{\set}{\mathbbstyle{S}}
\newcommand{\seti}[1]{\set_{#1}}
\newcommand{\setpairij}[2]{\left(#1,#2\right)}
\newcommand{\setpair}{\setpairij{\setS}{\setI}}

\newcommand{\bigsetpairij}[2]{\bigl(#1,#2\bigr)}

\newcommand{\setstar}{\set^*}
\newcommand{\setstari}[1]{\setstar_{#1}}



% Ground sets.
\newcommand{\matS}{S}
\newcommand{\matSi}[1]{\matS_{#1}}
\newcommand{\matPowS}{2^{\matS}}

\newcommand{\matSstar}{\matS^*}
\newcommand{\matSstari}[1]{\matSstar_{#1}}

% Independence sets.
\newcommand{\matI}{I}
\newcommand{\matIi}[1]{\matI_{#1}}

\newcommand{\matIstar}{\matI^*}
\newcommand{\matIstari}[1]{\matIstar_{#1}}

% Matroids.
\newcommand{\mat}{\mathbbstyle{M}}
\newcommand{\mati}[1]{\mat_{#1}}
\newcommand{\matpairij}[2]{\left(#1,#2\right)}
\newcommand{\matpair}{\matpairij{\matS}{\matI}}

\newcommand{\bigmatpairij}[2]{\bigl(#1,#2\bigr)}

\newcommand{\matstar}{\mat^*}
\newcommand{\matstari}[1]{\matstar_{#1}}


% Rank and span.
\newcommand{\matrank}[1]{\mathsf{rank}(#1)}
\newcommand{\matspan}[1]{\mathsf{span}(#1)}

% Cost of sampling from complement of flat in matroid.
\newcommand{\matsam}{\ccc}
\newcommand{\matsami}[1]{\matsam_{#1}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Probability.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Generic event in probability space.
\newcommand{\Event}{W}
\newcommand{\Eventi}[1]{\Event_{#1}}
\newcommand{\Eventl}[1]{\Event_{\labelstyle{#1}}}

% Support of random variable.
\newcommand{\support}[1]{\left[#1\right]}

% Probability.
\newcommand{\pPrBig}[1]{\Pr\big[#1\big]}
\newcommand{\pPrBigg}[1]{\Pr\bigg[#1\bigg]}
\newcommand{\pPr}[1]{\Pr\left[#1\right]}
\newcommand{\pPrp}[2]{\Pr_{#1}\left[#2\right]}

% Conditional probability.
\newcommand{\cPr}[2]{\Pr\twincommand{[}{#1}{|}{#2}{]}}
\newcommand{\cPrp}[3]{\Pr_{#1}\twincommand{[}{#2}{|}{#3}{]}}

% Expected value.
\newcommand{\Exp}{\mathop{\mathrm{E{}}}}
\newcommand{\pExp}[1]{\Exp\left[#1\right]}

% Conditional expected value.
\newcommand{\cExp}[2]{\Exp\twincommand{[}{#1}{|}{#2}{]}}

% Variance.
\newcommand{\Var}{\mathop{\mathrm{Var{}}}}
\newcommand{\pVar}[1]{\Var\left[#1\right]}

% Probability function of discrete distribution.
\newcommand{\dist}[1]{\mathsf{P}_{#1}}
\newcommand{\pdist}[2]{\dist{#1}\left(#2\right)}

% Conditional probability function of discrete distribution.
\newcommand{\cdist}[2]{\mathsf{P}_{\twincommand{.}{#1}{|}{#2}{.}}}
\newcommand{\pcdist}[4]{\cdist{#1}{#2}\twincommand{(}{#3}{|}{#4}{)}}
\newcommand{\cedist}[3]{\mathsf{P}_{\twincommand{.}{#1}{|}{#2#3}{.}}}
\newcommand{\pcedist}[5]{\cedist{#1}{#2}{#3}\twincommand{(}{#4}{|}{#5}{)}}
\newcommand{\edist}[2]{\cdist{#1}{#2}}
\newcommand{\pedist}[3]{\cdist{#1}{#2}\left(#3\right)}

% Statistical norm.
\newcommand{\snorm}[1]{\left\|#1\right\|}

% Min-entropy.
\DeclareMathOperator{\Hmin}{H_{\mathit{min}}}
\newcommand{\cHmin}[2]{\Hmin\twincommand{[}{#1}{|}{#2}{]}}

% Generic bound for min-entropy.
\newcommand{\hmin}{\eta}
\newcommand{\hmini}[1]{\hmin_{#1}}

% Cumulative distribution function.
\newcommand{\cum}[1]{\mathsf{F}_{#1}}

% Force textstyle for binom.
\newcommand{\tinom}[2]{{\textstyle\binom{#1}{#2}}}

% Probability generating function.
\newcommand{\probgen}[1]{\mathcal{G}_{#1}}

% Moment generating function.
\newcommand{\momgen}[1]{\mathcal{M}_{#1}}

% Generic error probability or statistical distance.
\newcommand{\err}{\epsilon}
\newcommand{\erri}[1]{\err_{#1}}
\newcommand{\errl}[1]{\err_{\labelstyle{#1}}}
\newcommand{\errp}[1]{\err(#1)}

\newcommand{\adv}{\delta}
\newcommand{\advi}[1]{\adv_{#1}}
\newcommand{\advji}[2]{\adv_{#1,#2}}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Distributions and bounds.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Generic tail, head, and negative tail bounds for distributions which
% allow it.
\newcommand{\tailbound}{\ttt}
\newcommand{\tailboundi}[3]{\tailbound_{#2}^{\scriptscriptstyle #1}(#3)}
\newcommand{\headbound}{\h}
\newcommand{\headboundi}[3]{\headbound_{#2}^{\scriptscriptstyle #1}(#3)}
\newcommand{\nailbound}{\nnn}
\newcommand{\nailboundi}[3]{\nailbound_{#2}^{\scriptscriptstyle #1}(#3)}

% Generic optimized parameters for parametrized distributions.
\newcommand{\gendistk}[2]{\kk^{\scriptscriptstyle#1}(#2)}
\newcommand{\gendistki}[3]{\kk^{\scriptscriptstyle#1}_{#2}(#3)}
\newcommand{\gendists}[2]{\s^{\scriptscriptstyle#1}(#2)}
\newcommand{\gendistsi}[3]{\s^{\scriptscriptstyle#1}_{#2}(#3)}

% Generic distribution.
\newcommand{\gendist}{\diststyle{D}}
\newcommand{\gendisti}[1]{\gendist_{#1}}

\newcommand{\pgendist}[1]{\gendist(#1)}
\newcommand{\pgendisti}[2]{\gendist_{#1}(#2)}
\newcommand{\pgendistexp}[1]{\mu_{\gendist(#1)}}
\newcommand{\pgendistiexp}[2]{\mu_{\gendisti{#1}(#2)}}

\newcommand{\pgendistip}[3]{\gendist_{#1}^{#2}(#3)}
\newcommand{\pgendistipexp}[3]{\mu_{\pgendistip{#1}{#2}{#3}}}

\newcommand{\pgendisttail}[1]{\ttt_{\gendist(#1)}}
\newcommand{\pgendistitail}[2]{\ttt_{\gendisti{#1}(#2)}}
\newcommand{\pgendisthead}[1]{\h_{\gendist(#1)}}

% Geometric distribution.
\newcommand{\geoname}{\diststyle{Geo}}
\newcommand{\geodist}[1]{\geoname(#1)}
\newcommand{\geodisti}[2]{\geoname_{#1}(#2)}
\newcommand{\geodistexp}[1]{\mu_{\geoname(#1)}}

% Hypergeometric distribution.
\newcommand{\hgeoname}{\diststyle{HG}}
\newcommand{\hgeodist}[1]{\hgeoname(#1)}
\newcommand{\hgeodisti}[2]{\hgeoname_{#1}(#2)}
\newcommand{\hgeodistexp}[1]{\mu_{\hgeoname(#1)}}

% Negative hypergeometric distribution.
\newcommand{\nhgeoname}{\diststyle{NHG}}
\newcommand{\nhgeodist}[1]{\nhgeoname(#1)}
\newcommand{\nhgeodisti}[2]{\nhgeoname_{#1}(#2)}
\newcommand{\nhgeodistexp}[1]{\mu_{\nhgeoname(#1)}}

% Compound geometric distribution.
\newcommand{\geocname}{\diststyle{CG}}
\newcommand{\geocdist}[1]{\geocname(#1)}
\newcommand{\geocdisti}[2]{\geocname(#1,#2)}
\newcommand{\tailboundcgi}[2]{\tailboundi{\geocname}{#1}{#2}}
\newcommand{\headboundcgi}[2]{\headboundi{\geocname}{#1}{#2}}

% Negative binomial distribution.
\newcommand{\negbinname}{\diststyle{NB}}
\newcommand{\negbindist}[1]{\negbinname(#1)}
\newcommand{\negbindistexp}[1]{\mu_{\negbindist{#1}}}
\newcommand{\tailboundnbi}[2]{\tailboundi{\negbinname}{#1}{#2}}
\newcommand{\headboundnbi}[2]{\headboundi{\negbinname}{#1}{#2}}
\newcommand{\nailboundnbi}[2]{\nailboundi{\negbinname}{#1}{#2}}

\newcommand{\negbinki}[2]{\gendistki{\negbinname}{#1}{#2}}
\newcommand{\negbinsi}[2]{\gendistsi{\negbinname}{#1}{#2}}

% Exponential distribution.
\newcommand{\expname}{\diststyle{Exp}}
\newcommand{\expdist}[1]{\expname(#1)}

